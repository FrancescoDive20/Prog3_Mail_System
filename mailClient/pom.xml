<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <!-- Parent -->
    <parent>
        <groupId>it.unito</groupId>
        <artifactId>ProgettoMail</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>mail-client</artifactId>
    <packaging>jar</packaging>

    <name>Mail Client</name>

    <!-- ==== Dependencies ==== -->
    <dependencies>

        <!-- JSON serializer -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>

        <!-- JavaFX modules -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
        </dependency>

        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>${javafx.version}</version>
        </dependency>

    </dependencies>

    <!-- ==== Build ==== -->
    <build>
        <plugins>

            <!-- JavaFX Runner -->
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version>
                <configuration>
                    <mainClass>it.unito.mailclient.MailClientApp</mainClass>
                    <javafxVersion>${javafx.version}</javafxVersion>
                </configuration>
            </plugin>

        </plugins>
    </build>
</project>
